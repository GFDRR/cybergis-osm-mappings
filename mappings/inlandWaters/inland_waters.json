         "waterway":["river","stream","ditch"]
      },
      "fields":
      {
        "geom":{"name":"geom", "type":"LINESTRING"},
        "status": {"name":"status", "type":"STRING"},
        "photos": {"name":"media", "type":"STRING"},
        "name":{"name":"name", "type":"STRING"},
        "boat":{"name":"boat", "type":"STRING"}
